#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i = 0;
    int j = 0;
    int xBorder = 0;
    int yBorder = 2;
    char setDot = '.';
    int xGrid = 9;
    int yGrid = 9;
    int borderFlag;

    int backGrid[xGrid][yGrid];

    for(i = 0;i<yGrid;i++){
        xBorder = 0;
        for(j = 0;j<xGrid;j++){

            if(i == 0 && j == 0){
                printf(" +-------+-------+-------+\n");
            }

            if(j == xBorder){
                printf(" |");
                xBorder = xBorder + 3;
            }

            backGrid[i][j] = setDot;
            printf(" %c", backGrid[i][j]);

            if(i == yBorder && j == 8){
                printf(" |\n +-------+-------+-------+\n");
                yBorder = yBorder + 3;
                borderFlag = 1;
            }else if(j == 8){
                printf(" |");
                borderFlag = 0;
            }
        }
        if(borderFlag == 0){
             printf("\n");
        }
    }
    return 0;
}
