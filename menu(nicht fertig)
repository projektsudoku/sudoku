char mainMenu(mmSelection){
    //system("cls");
    //while ((getchar()) != '\n');
    printf("Eingabe Mainmenu: ");
    mmSelection = getchar();
    switch(mmSelection){
        case('g'): mmSelection = gameMenu();break;
        case('e'): printf("Sie wollen das Spiel verlassen\n");break;
    }
    return mmSelection;
}

char gameMenu(){
    system("cls");
    while ((getchar()) != '\n');
