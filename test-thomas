#include <stdio.h>
#include <stdlib.h>

int loadGrid();
int stdAusgabe();
int mainMenu();
int gameMenu();
int startGame();


int main(){

    startGame();

    return 0;
}

int stdAusgabe(){
    printf("Wilkommen zu Sudoku!\n\n");

    printf("Bitte waehlen Sie einen Menuepunkt: \n");
    printf("(Geben Sie die Zahl ein und bestaetigen Sie mit der Eingabetaste)\n\n");

    return 0;
}

int mainMenu(){
    int selection = 0;
    do{
        system("cls");
        stdAusgabe();

        printf("1. Spielen \n2. Anleitung\n3. Verlassen\n\n");
        printf("Eingabe Mainmenu: ");
        scanf("%i", &selection);
        switch(selection){
            case(1): gameMenu();break;
            case(2): printf("Sie wollen die Anleitung lesen\n");break;
            case(3): printf("Sie wollen das Speiel verlassen\n");break;
        }
    }while(selection != 3);
}

int gameMenu(){
    int gmSelection = 0;
    system("cls");
    stdAusgabe();
    printf("1. Einfach \n2. Mittel\n3. Schwer \n4. Zum Hauptmenu\n\n");
    printf("Eingabe Mainmenu: ");

    scanf("%i", &gmSelection);
    switch(gmSelection){
        case(1): startGame(gmSelection);break;
        case(2): printf("Sie wollen Sudoku 2 spielen");break;
        case(3): printf("Sie wollen Sudoku 3 spielen\n");break;
        case(4): printf("Verlassen\n");break;
    }
}

int startGame(int diff){
    int x,y;
    int i = 0;
    int j = 0;
    int xBorder = 1;
    int yBorder = 3;
    char z  = ' ';
    char setDot = '.';
    int xGrid = 10;
    int yGrid = 10;
    int borderFlag;

    int backGrid[xGrid][yGrid];

    for(i = 1;i<yGrid;i++){
        xBorder = 1;
        for(j = 1;j<xGrid;j++){

            if(i == 1 && j == 1){
                printf(" +-------+-------+-------+\n");
            }

            if(j == xBorder){
                printf(" |");
                xBorder = xBorder + 3;
            }

            backGrid[i][j] = setDot;
            printf(" %c", backGrid[i][j]);

            if(i == yBorder && j == 9){
                printf(" |\n +-------+-------+-------+\n");
                yBorder = yBorder + 3;
                borderFlag = 1;
            }else if(j == 9){
                printf(" |");
                borderFlag = 0;
            }
        }
        if(borderFlag == 0){
             printf("\n");
        }
    }
    do{
        yBorder = 3;
        printf("Eingabe X: ");
        scanf("%i",&x);
        printf("Eingabe Y: ");
        scanf("%i",&y);
        printf("Eingabe Zahl : ");
        fflush(stdin);
        z = getchar();
        backGrid[x][y] = z;
        system("cls");
        for(i = 1;i<yGrid;i++){
        xBorder = 1;
        for(j = 1;j<xGrid;j++){

            if(i == 1 && j == 1){
                printf(" +-------+-------+-------+\n");
            }

            if(j == xBorder){
                printf(" |");
                xBorder = xBorder + 3;
            }

            //backGrid[i][j] = setDot;
            printf(" %c", backGrid[i][j]);

            if(i == yBorder && j == 9){
                printf(" |\n +-------+-------+-------+\n");
                yBorder = yBorder + 3;
                borderFlag = 1;
            }else if(j == 9){
                printf(" |");
                borderFlag = 0;
            }
        }
        if(borderFlag == 0){
             printf("\n");
        }
    }
    }while(diff != 0);
}

int loadGrid(int x, int y){
    int i = 0;
    int j = 0;
    int xBorder = 1;
    int yBorder = 3;
    char setDot = '.';
    int xGrid = 10;
    int yGrid = 10;
    int borderFlag;
    int setNum;

    int backGrid[xGrid][yGrid];

    for(i = 1;i<yGrid;i++){
        xBorder = 1;
        for(j = 1;j<xGrid;j++){

            if(i == 1 && j == 1){
                printf(" +-------+-------+-------+\n");
            }

            if(j == xBorder){
                printf(" |");
                xBorder = xBorder + 3;
            }

            backGrid[i][j] = setDot;
            backGrid[x][y] = setNum;
            printf(" %c", backGrid[i][j]);

            if(i == yBorder && j == 9){
                printf(" |\n +-------+-------+-------+\n");
                yBorder = yBorder + 3;
                borderFlag = 1;
            }else if(j == 9){
                printf(" |");
                borderFlag = 0;
            }
        }
        if(borderFlag == 0){
             printf("\n");
        }
    }
    return 0;
}
